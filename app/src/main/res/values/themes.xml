<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SIWIKODE" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/monterey_blue</item>
        <item name="colorPrimaryVariant">@color/monterey_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/monterey_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>

    </style>

    <style name="Theme.SIWIKODE.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SIWIKODE.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SIWIKODE.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="myCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="myMaterialCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="myImage">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="myImage.Small">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
    </style>

    <style name="myImage.Big">
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="myLinear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myLinear.Vertical">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="myLinear.Horizontal">
       <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="myHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myHeader.Big">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="myHeader.Small">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="mySubHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="mySubHeader.Small">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="myContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="myAnimationSplash">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_rawRes">@raw/travel2</item>
    </style>

    <style name="myButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/rounded_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>